@use '../../../scss/_modern-design-system.scss' as *;

.form-container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 1.5rem 1rem;
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
  min-height: 100vh;

  // Para modo crear: mantener centrado
  &:has(.form-step) {
    max-width: 980px;
  }

  .form-header {
    text-align: center;
    margin-bottom: 2rem;

    .header-content {
      .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .form-subtitle {
        font-size: 1rem;
        color: var(--text-secondary);
        margin: 0;
      }
    }
  }

  // Progress Bar
  .progress-section {
    margin-bottom: 2rem;

    .progress-bar {
      height: 6px;
      background: var(--bg-tertiary);
      border-radius: $radius-full;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);

      .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-radius: $radius-full;
        transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }
    }

    .progress-text {
      text-align: center;
      color: var(--text-secondary);
      font-size: 0.875rem;
      margin-top: 0.75rem;
      margin-bottom: 0;
    }
  }

  // Alert Messages
  .alert {
    padding: 1rem 1.25rem;
    border-radius: $radius-lg;
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideDown 0.3s cubic-bezier(0.4, 0, 0.2, 1);

    &.alert-error {
      background: rgba(239, 68, 68, 0.1);
      border-color: rgba(239, 68, 68, 0.3);

      .alert-icon {
        color: #ef4444;
        font-size: 1.25rem;
      }

      .alert-message {
        color: #ef4444;
      }

      .alert-close {
        color: #ef4444;

        &:hover {
          background: rgba(239, 68, 68, 0.2);
        }
      }
    }

    &.alert-success {
      background: rgba(34, 197, 94, 0.1);
      border-color: rgba(34, 197, 94, 0.3);

      .alert-icon {
        color: #22c55e;
        font-size: 1.25rem;
      }

      .alert-message {
        color: #22c55e;
      }
    }

    .alert-icon {
      flex-shrink: 0;
      font-size: 1.25rem;
    }

    .alert-message {
      flex: 1;
      font-size: 0.95rem;
      font-weight: 500;
    }

    .alert-close {
      flex-shrink: 0;
      background: transparent;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      padding: 0;
      color: inherit;
      transition: background 0.2s ease;
      border-radius: $radius-base;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;

      &:hover {
        background: rgba(255, 255, 255, 0.1);
      }
    }
  }

  // Loading State
  .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    gap: 1.5rem;

    .spinner {
      width: 48px;
      height: 48px;
      border: 4px solid rgba(99, 102, 241, 0.2);
      border-top-color: var(--primary-color);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    p {
      color: var(--text-secondary);
      font-size: 1rem;
      margin: 0;
    }
  }

  // Form Styles
  form {
    background: var(--bg-secondary);
    border-radius: $radius-xl;
    padding: 1.5rem;
    border: 1px solid rgba(99, 102, 241, 0.1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);

    .form-step {
      .step-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        margin-top: 0;
      }

      .step-description {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 2rem;
      }

      .form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(260px, 1fr));
        gap: 1rem 1.5rem;
        margin-bottom: 1.5rem;

        .full-width {
          grid-column: 1 / -1;
        }

        @media (max-width: 820px) {
          grid-template-columns: 1fr;
        }
      }

      // Sections for edit mode (now each is in its own card)
      .section-group {
        margin-bottom: 0;
        padding: 0;
        background: none;
        border-radius: 0;
        border: none;
        box-shadow: none;
        position: relative;

        .step-title {
          font-size: 1.6rem;
          font-weight: 700;
          color: var(--primary-color);
          margin-bottom: 2rem;
          padding-bottom: 1.25rem;
          border-bottom: 3px solid var(--primary-color);
          display: flex;
          align-items: center;
          gap: 0.75rem;
          text-transform: uppercase;
          letter-spacing: 0.5px;

          &::before {
            content: '';
            width: 5px;
            height: 28px;
            background: linear-gradient(180deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-radius: 2px;
          }
        }

        .form-grid {
          display: grid;
          grid-template-columns: repeat(3, minmax(240px, 1fr));
          gap: 1.5rem 2rem;
          margin-bottom: 0;

          .full-width {
            grid-column: 1 / -1;
          }

          @media (max-width: 1200px) {
            grid-template-columns: repeat(2, minmax(240px, 1fr));
            gap: 1.25rem 1.75rem;
          }

          @media (max-width: 900px) {
            grid-template-columns: repeat(2, minmax(220px, 1fr));
            gap: 1.125rem 1.5rem;
          }

          @media (max-width: 600px) {
            grid-template-columns: 1fr;
            gap: 1rem;
          }
        }
      }
    }
  }

  // Form Groups
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    .form-label {
      font-size: 0.85rem;
      font-weight: 700;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.25rem;
      text-transform: capitalize;
    }

    .form-control,
    .form-select {
      min-height: 40px;
      font-size: 0.9rem;
      border: 1px solid rgba(99, 102, 241, 0.3);
      background: var(--bg-secondary);
      color: var(--text-primary);
      transition: all 0.2s ease;
      border-radius: 0.375rem;
      padding: 0.625rem 0.875rem;

      &:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        background: var(--bg-secondary);
      }

      &.is-invalid {
        border-color: #ef4444;
        background: rgba(239, 68, 68, 0.05);
      }

      &:disabled {
        background: rgba(0, 0, 0, 0.05);
        cursor: not-allowed;
      }
    }

    .form-select option {
      background: var(--bg-secondary);
      color: var(--text-primary);
      padding: 0.5rem;
    }

    .error-message {
      font-size: 0.8rem;
      color: #ef4444;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 0.25rem;

      &::before {
        content: '⚠ ';
      }
    }

    .help-text {
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin-top: 0.25rem;
    }

    &.highlight-cost {
      background: rgba(99, 102, 241, 0.05);
      padding: 1rem;
      border-radius: $radius-lg;
      border: 1px solid rgba(99, 102, 241, 0.2);
      margin-top: 0;
    }
  }

  // Checkbox Group
  .checkbox-group {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 0.5rem 0;
  }

  // Step Indicators
  .steps-indicator {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(99, 102, 241, 0.1);

    .step-indicator {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 2px solid rgba(99, 102, 241, 0.3);
      background: var(--bg-tertiary);
      color: var(--text-secondary);
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

      &:hover:not(:disabled) {
        border-color: var(--primary-color);
        color: var(--primary-color);
      }

      &.active {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-color: var(--primary-color);
        color: white;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
      }

      &.completed {
        background: rgba(34, 197, 94, 0.2);
        border-color: #22c55e;
        color: #22c55e;

        &::after {
          content: '✓';
          margin-left: 0.25rem;
        }
      }

      &:disabled:not(.active):not(.completed) {
        opacity: 0.5;
        cursor: not-allowed;
      }
    }
  }

  // Form Actions
  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(99, 102, 241, 0.1);

    .btn {
      padding: 0.875rem 2rem;
      border-radius: $radius-lg;
      border: none;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;

      &:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .button-spinner {
        width: 16px;
        height: 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
      }
    }

    .btn-primary {
      @include btn-primary-modern;

      &:disabled {
        opacity: 0.6;

        &:hover {
          transform: none;
        }
      }
    }

    .btn-secondary {
      @include btn-secondary-modern;

      &:disabled {
        opacity: 0.6;

        &:hover {
          transform: none;
        }
      }
    }
  }
}

// Animations
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// Responsive Design
@media (max-width: 768px) {
  .form-container {
    padding: 1rem 1rem;

    .form-header {
      margin-bottom: 1.5rem;

      .header-content {
        .form-title {
          font-size: 1.5rem;
        }

        .form-subtitle {
          font-size: 0.9rem;
        }
      }
    }

    form {
      padding: 1.5rem;

      .form-step {
        .form-grid {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
      }
    }

    .steps-indicator {
      gap: 0.75rem;

      .step-indicator {
        width: 36px;
        height: 36px;
        font-size: 0.8rem;
      }
    }

    .form-actions {
      flex-direction: column;
      gap: 0.75rem;

      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  }
}

@media (max-width: 480px) {
  .form-container {
    min-height: auto;
    padding: 1rem 0.75rem;

    .form-header {
      .header-content {
        .form-title {
          font-size: 1.25rem;
        }
      }
    }

    form {
      border-radius: $radius-lg;
      padding: 1.25rem;

      .form-step {
        .step-title {
          font-size: 1.25rem;
        }
      }
    }

    .steps-indicator {
      .step-indicator {
        width: 32px;
        height: 32px;
        font-size: 0.75rem;
      }
    }

    .form-actions {
      .btn {
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
      }
    }
  }
}

// Estilos específicos para el modo editar
.row.g-4 {
  .col-lg-8 {
    .card {
      border: 2px solid rgba(99, 102, 241, 0.2);
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.02) 0%, rgba(99, 102, 241, 0.01) 100%);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      margin-bottom: 1.75rem;
      transition: all 0.3s ease;

      &:hover {
        border-color: rgba(99, 102, 241, 0.3);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
      }

      .card-body {
        padding: 2.5rem;
      }

      .section-group .step-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 2rem;
        padding-bottom: 1.25rem;
        border-bottom: 3px solid var(--primary-color);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;

        &::before {
          content: '';
          width: 5px;
          height: 28px;
          background: linear-gradient(180deg, var(--primary-color) 0%, var(--secondary-color) 100%);
          border-radius: 2px;
        }
      }

      .section-group .form-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(240px, 1fr));
        gap: 1.5rem 2rem;
        margin-bottom: 0;

        .full-width {
          grid-column: 1 / -1;
        }

        @media (max-width: 1200px) {
          grid-template-columns: repeat(2, minmax(240px, 1fr));
          gap: 1.25rem 1.75rem;
        }

        @media (max-width: 900px) {
          grid-template-columns: repeat(2, minmax(220px, 1fr));
          gap: 1.125rem 1.5rem;
        }

        @media (max-width: 600px) {
          grid-template-columns: 1fr;
          gap: 1rem;
        }
      }
    }
  }

  .col-lg-4 {
    .card {
      margin-bottom: 1.25rem;
      border: 1px solid rgba(99, 102, 241, 0.1);
      
      &:last-child {
        margin-bottom: 0;
      }

      .card-header {
        background: rgba(99, 102, 241, 0.05);
        border-bottom: 2px solid rgba(99, 102, 241, 0.15);
        padding: 0.875rem 1rem;
        font-weight: 700;
        font-size: 0.95rem;
        color: var(--text-primary);
      }

      .card-body {
        padding: 0;

        .list-group-item {
          padding: 0.75rem 1rem;
          border-color: rgba(99, 102, 241, 0.08);
          font-size: 0.875rem;

          &:first-child {
            border-top: none;
          }

          .btn-group {
            .btn-link {
              padding: 0.25rem 0.5rem;
              font-size: 0.8rem;
            }
          }
        }
      }
    }

    h2.step-title {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid rgba(99, 102, 241, 0.2);
    }
  }
}
